<Page x:ConnectionId='1'
    x:Class="Activity5.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Activity5"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:data="using:Activity5.Models"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>

        <GridView x:ConnectionId='2'                             >
            <GridView.ItemTemplate>
                <DataTemplate                       >
                    <StackPanel x:ConnectionId='4'>
                        <Image x:ConnectionId='5' Width="150"                             />
                        <TextBlock x:ConnectionId='6' FontSize="16"                      />
                        <TextBlock x:ConnectionId='7' FontSize="10"                       />
                    </StackPanel>
                    
                </DataTemplate>
            </GridView.ItemTemplate>
        </GridView>
        <TextBlock x:ConnectionId='3' Grid.Row="1"
                   Name="ResultTextBlock"
                   FontSize="24"
                   Foreground="Red"
                   FontWeight="Bold"
                   Margin="0,20,0,0" />
        
    </Grid>
</Page>

